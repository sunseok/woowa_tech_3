<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="wall"></div>

<%= image_tag("logo.gif", id:"img_session") %>
<br>
<div class="container contents-center">


  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h2><%= t(".title", resource: resource_class.model_name.human) %></h2>

  <div class="form-inputs">
    

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>
        <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
      </p>
    <% end %>
  </div>
  </div>
  </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <%= f.input :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes"), required: true %>
    <%= f.input :password, autocomplete: "off", hint: t(".leave_blank_if_you_don_t_want_to_change_it"), required: false, label: "변경할 비밀번호" %>
    <%= f.input :password_confirmation, required: false,label:"변경할 비밀번호 확인"%>

  </div>
</div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
  <div class="form-actions">
    <%= link_to "이전", new_post_path, method: "get", class: "btn btn-default" %>
    <%= f.button :submit, t(".update") %>
  </div>
<% end %>
<!--회원탈퇴 및 돌아가기 링크
<h3><%= t(".cancel_my_account") %></h3>

<p><%= t(".unhappy") %> <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>

<%= link_to t("devise.shared.links.back"), :back %>
-->
</div>
</div>
</div>
