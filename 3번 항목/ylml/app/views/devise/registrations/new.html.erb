<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="wall"></div>

  <%= image_tag("logo.gif", id:"img_session") %>
<br>
<div class="container contents-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= t(".sign_up") %></h2>
  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: "이름" %>
    <%= f.input :stuN, required: true, label: "학번" %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :major, required: true, label: "학과", as: :radio_buttons, :collection => [ "응용화학과", "응용물리학과", "응용수학과", "우주과학과", "산업경영공학과" ]%>
    <%= f.input :identity, required: true, label: "권한", as: :radio_buttons, :collection => [[ "학부생", "1"], ["대학원생","2"], ["교수","3"],["관리자","admin"]]%>
  </div>
</div>
</div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
  <div class="form-actions">
    <%= f.button :submit, t(".sign_up") %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>

</div>
  </div>
</div>
<div class="wall"></div>
