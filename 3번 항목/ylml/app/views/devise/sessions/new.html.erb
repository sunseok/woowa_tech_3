<div class="wall"></div>

<%= image_tag("logo.gif", id:"img_session") %>
<br>
<div class="container contents-center">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <div class="form-inputs">
    <%= f.input :login, required: false, autofocus: true %>
    <%= f.input :password, required: false, hint: "초기 비밀번호는 신청한 학번과 동일합니다."%>
    <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
  </div>
</div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <div class="form-actions">
    <%= f.button :submit, t(".sign_in") %>
    <%= render "devise/shared/links" %>
    <a class = "btn btn-default" href="/tempusers/new" style="color: black;">가입신청</a>
  </div>

<% end %>
</div>
</div>
</div>
